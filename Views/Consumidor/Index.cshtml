@model NEGRASM.Models.Consumidor;

@{
    ViewData["Title"] = "Pessoas";
    var consumidores = ViewData["Consumidores"] as List<Consumidor>;
}

<h1> Cadastro </h1>
<h4>Faça parte do nosso público.</h4>

<div class="container" style="background-image:url(https://conwayscene.com/wp-content/uploads/2020/10/1601418871041f14e49aa34709c97060f.jpg)" width="400" height="300">>
    <div class="row">
         <div class="col-md-12">

            <h2 class="text-light">Cadastrar</h2>
            <form asp-controller="Consumidor" asp-action="Index">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label  class="text-light" for="">Nome completo</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Escreva aqui seu nome Completo">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">CPF</label>
                        <input asp-for="CPF" type="text" class="form-control" id="" placeholder="000.000.000.000-00">
                    </div>
                     <div class="form-group col-md-6">
                        <label class="text-light" for="">Endereço</label>
                        <input asp-for="Endereco" type="text" class="form-control" id="" placeholder="Escreva aqui seu endereço">
                    </div>
                      <div class="form-group col-md-6">
                        <label class="text-light" for="">Complemento</label>
                        <input asp-for="Complemento" type="text" class="form-control" id="" placeholder="Exemplo:Bloco 0 Casa 2">
                    </div>
                     <div class="form-group col-md-6">
                        <label class="text-light" for="">Cidade</label>
                        <input asp-for="Cidade" type="text" class="form-control" id="" placeholder="Ex:Rio de Janeiro">
                    </div>
                     <div class="form-group col-md-3">
                        <label class="text-light" for="">Estado</label>
                        <select class="custom-select" asp-for="Estado">
                            <option selected>-- Selecione uma opção</option>
                            <option>RJ</option>
                            <option>SP</option>
                            <option>MG</option>
                        </select>
                    </div>
                     <div class="form-group col-md-6">
                        <label class="text-light" for="">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="" placeholder="nome@exemplo.com">
                    </div>
                     <div class="form-group col-md-3">
                        <label class="text-light" for="">Telefone</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="(11) 98765-4321">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">Nascimento</label>
                        <input asp-for="Nascimento" type="date" class="form-control" id="">
                    </div>
    
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">Sexo</label>
                        <select class="custom-select" asp-for="Sexo">
                            <option selected>-- Selecione uma opção</option>
                            <option>Femenino</option>
                            <option>Masculino</option>
                            <option>Indefinido</option>
                        </select>
                    </div>
                </div>
                 <button type="submit" class="btn btn-success">Incluir</button>
            </form>
             <br />

             <br />

             <br />


              <h2 class="text-light">Atualizar Dados</h2>

             <form asp-controller="Consumidor" asp-action="Atualizar">

                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label class="text-light"  for="">Código do consumidor</label>
                        <select class="custom-select" asp-for="Id">
                            <option selected>-- Selecione um código</option>
                            @{
                                foreach (var consumidor in consumidores)
                                {
                                    <option>@consumidor.Id</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="text-light" for="">Nome completo</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Escreva aqui seu nome completo">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">CPF</label>
                        <input asp-for="CPF" type="text" class="form-control" id="" placeholder="000.000.000.000-00">
                    </div>
                     <div class="form-group col-md-6">
                        <label class="text-light" for="">Endereço</label>
                        <input asp-for="Endereco" type="text" class="form-control" id="" placeholder="Escreva aqui seu endereço">
                    </div>
                       <div class="form-group col-md-6">
                        <label class="text-light" for="">Complemento</label>
                        <input asp-for="Complemento" type="text" class="form-control" id="" placeholder="Ex:Bloco 0 Casa 2">
                    </div>
                      <div class="form-group col-md-6">
                        <label class="text-light" for="">Cidade</label>
                        <input asp-for="Cidade" type="text" class="form-control" id="" placeholder="Ex:Petrópolis">
                    </div>
                      <div class="form-group col-md-3">
                        <label class="text-light" for="">Estado</label>
                        <select class="custom-select" asp-for="Estado">
                            <option selected>-- Selecione uma opção</option>
                            <option>RJ</option>
                            <option>SP</option>
                            <option>MG</option>
                        </select>
                    </div>
                     <div class="form-group col-md-6">
                        <label class="text-light" for="">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="" placeholder="nome@exemplo.com">
                    </div>
                     <div class="form-group col-md-3">
                        <label class="text-light" for="">Telefone</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="(11) 98765-4321">
                    </div>
                    <div class="form-group col-md-3">
                        <label class="text-light" for="">Nascimento</label>
                        <input asp-for="Nascimento" type="date" class="form-control" id="">
                    </div>
                     <div class="form-group col-md-3">
                        <label class="text-light" for="">Sexo</label>
                        <select class="custom-select" asp-for="Sexo">
                            <option selected>-- Selecione uma opção</option>
                            <option>Femenino</option>
                            <option>Masculino</option>
                            <option>Indefinido</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </form>

            <br />
            <br />

            <br />


               <h2 class="text-light">Clientes cadastrados</h2>
                <table class="table bg-light">
                    <thead>
                       <tr>
                          <th>Id</th>
                          <th>Nome</th>
                          <th>CPF</th>
                          <th>End.</th>
                          <th>Compl.</th>
                          <th>Cidade</th>
                          <th>Estado</th>
                          <th>Email</th>
                          <th>Tel.</th>
                          <th>Dt Nasc</th>
                          <th>Sexo</th>
                      </tr>
                  </thead>
                  <tbody>
                      @{
                         foreach (var consumidor in consumidores)
                         {
                            <tr>
                                <td>@consumidor.Id</td>
                                <td>@consumidor.Nome</td>
                                <td>@consumidor.CPF</td>
                                <td>@consumidor.Endereco</td>
                                <td>@consumidor.Complemento</td>
                                <td>@consumidor.Cidade</td>
                                <td>@consumidor.Estado</td>
                                <td>@consumidor.Email</td>
                                <td>@consumidor.Telefone</td>
                                <td>@consumidor.Nascimento</td>
                                <td>@consumidor.Sexo</td>
                                <td>
                                <form asp-controller="Consumidor" asp-action="Deletar">
                                    <button class="btn btn-danger" type="submit">Deletar</button>
                                    <input asp-for="Id" style="visibility:hidden;" type="text" value="@consumidor.Id">
                                </form>
                                </td>
                            </tr>
                          }
                        }
                  </tbody>
               </table>

         </div>

    </div>

</div>
